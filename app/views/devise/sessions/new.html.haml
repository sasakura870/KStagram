.log  
  .log_in
    -# %h2.log_in-header Kstagram
    .log_in_main
      %h2 Sign in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .log_str_items 
          .log_str_items_mail
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス"
          .log_str_items_password
            -# = f.label :password
            %br/
            = f.password_field :password, autocomplete: "current-password",placeholder: "パスワード"
          - if devise_mapping.rememberable?
            .log_str_items_check
              = f.check_box :remember_me
              = f.label :ログイン状態を保持する
          
          .log_str_items_button
            = f.submit "Sign in"
          = render "devise/shared/links"
